        {
            <button class="btn btn-primary pull-left" style="background-color:#003366" onclick="location.href='@Url.Action("Create", "MDT", new { id = Model.Patient.PatientId })'">Add New Episode</button>
        }
           else if (Model.MdtId != 0)
            {
                <div style="margin-top:20px;margin-bottom:10px">

                    <h3 style="color:#003366">Latest MDT Episode  @Model.MDTDate.ToShortDateString() </h3>

                    @*<div style="float:right">Added By: </div>*@

                </div>

                <div class="row" style="padding-top:10px">
                    <div class="col-md-6"><div class="col-md-6"><b>MDT Date: </b></div><div class="col-md-6">@Model.MDTDate.ToShortDateString()</div></div>
                    <div class="col-md-6"><div class="col-md-6"><b>Other: </b></div><div></div></div>
                </div>
                <div class="row" style="padding-top:10px">
                    <div class="col-md-6"><div class="col-md-6"><b>History: </b></div><div class="col-md-6">@Model.History</div></div>
                    <div class="col-md-6"><div class="col-md-6"><b>Other: </b></div><div class="col-md-6"></div></div>


                </div>
                <div class="row" style="padding-top:10px">
                    <div class="col-md-6"><div class="col-md-6"><b>MDT Discussion: </b></div><div class="col-md-6">@Model.MDTDiscussion</div></div>
                    <div class="col-md-6"><div class="col-md-6"><b>Other: </b></div><div class="col-md-6"></div></div>

                </div>
                <div class="row" style="padding-top:10px">
