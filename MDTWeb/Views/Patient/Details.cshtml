<div class="row">
    <div class="col-md-2" style="margin-top:20px">
        <div class="vertical-menu">
            <a href="#" class="active">Main Menu</a>
            @Html.ActionLink("Patients", "Index", "Patient")
            @Html.ActionLink("User", "Index", "User")
            @Html.ActionLink("Logout", "Index", "Home")

        </div>


        <div class="vertical-menu" style="margin-top:20px">
            <a href="#" class="active">Episode Menu</a>
            @*@Html.ActionLink("View all episodes", "Index", "Patient")*@
            @if (Model.MDTEpisode != null && Model.MDTEpisode.Count > 0)
            {
                foreach (var mdt in Model.MDTEpisode)
                {

                    @Html.ActionLink("Episode " + mdt.MDTDate.ToShortDateString(), "Details", "MDT", new { id = mdt.MDTId }, null)

                }

            }
        </div>


        <div class="vertical-menu" style="margin-top:20px">
            <a href="#" class="active">Attendees  @DateTime.Now.ToShortDateString()</a>
            <input type="checkbox" name="user" value="1" style="padding-left:10px">Vivek Srivastava<br>
            <input type="checkbox" name="user" value="2" style="padding-left:10px">Shakil

        </div>
    </div>
    <div class="col-md-10" style="text-align: left;">
        <h3 style="color:#003366">@Model.Patient.FirstName @Model.Patient.LastName</h3>
        <div class="card">
            <div class="header">
                <div class="row">
                    <div class="col-md-4"><div class="col-md-6"><b>Hospital No: </b></div><div class="col-md-6">@Model.Patient.HospitalNo</div></div>
                    <div class="col-md-4"><div class="col-md-6"><b>Date Of Birth: </b></div><div class="col-md-6">@Model.Patient.DateofBirth.ToShortDateString()</div></div>
                    <div class="col-md-4"><div class="col-md-6"><b>GP Name: </b></div><div class="col-md-6">@Model.Patient.GpName</div></div>
                </div>
                <div class="row" style="padding-top:10px">
                    <div class="col-md-4"><div class="col-md-6"><b>NHS No: </b></div><div class="col-md-6">@Model.Patient.NhsNo</div></div>
                    <div class="col-md-4"><div class="col-md-6"><b>Address: </b></div><div class="col-md-6">@Model.Patient.AddressLine1</div></div>
                    <div class="col-md-4"><div class="col-md-6"><b>GP Address: </b></div><div class="col-md-6">@Model.Patient.GpAddressLine1</div></div>

                </div>
                <div class="row" style="padding-top:10px">
                    <div class="col-md-4"><div class="col-md-6"><b>First Name: </b></div><div class="col-md-6">@Model.Patient.FirstName</div></div>
                    <div class="col-md-4"><div class="col-md-6"><b> </b></div><div class="col-md-6">@Model.Patient.AddressLine2 @Model.Patient.City</div></div>
                    <div class="col-md-4"><div class="col-md-6"><b></b></div><div class="col-md-6">@Model.Patient.GpAddressLine2 @Model.Patient.GpCity</div></div>
                </div>
                <div class="row" style="padding-top:10px">
                    <div class="col-md-4"><div class="col-md-6"><b>Surname: </b></div><div class="col-md-6">@Model.Patient.LastName</div></div>
                    <div class="col-md-4"><div class="col-md-6"><b>Postcode: </b></div><div class="col-md-6">@Model.Patient.Postcode</div></div>
                    <div class="col-md-4"><div class="col-md-6"><b>Postcode: </b></div><div class="col-md-6">@Model.Patient.GpPostcode</div></div>
                </div>
            </div>
        </div>
